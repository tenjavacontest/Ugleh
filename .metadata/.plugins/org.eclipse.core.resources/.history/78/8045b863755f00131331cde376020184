package com.tenjava.ugleh.sitstick;

import org.bukkit.ChatColor;
import org.bukkit.command.Command;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.plugin.Plugin;
import org.bukkit.plugin.java.JavaPlugin;

public class Main extends JavaPlugin{
	public static Plugin main;
	public String msgP = ChatColor.YELLOW + "[" + ChatColor.LIGHT_PURPLE + "SitStick" + ChatColor.YELLOW + "] " + ChatColor.RED;
	public  void onEnable(){
		main = this;
		getServer().getPluginManager().registerEvents(new MListener(), this);
	}
	
	public void onDisable(){
		
	}
	
	@Override
    public boolean onCommand(CommandSender sender, Command cmd, String label, String[] args){
    	if(cmd.getName().equalsIgnoreCase("sitstick")){
    		if(sender instanceof Player){
    			
    		}else{
    			sender.sendMessage(msgP + "Must be a in game to use this command");
    		}
    		return true; 
    	}
    	return false; 
    }
}
